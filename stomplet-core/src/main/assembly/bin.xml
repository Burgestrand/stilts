<assembly>
  <id>bin</id>
  <baseDirectory>clownshoes-${project.version}</baseDirectory>
  <formats>
    <format>dir</format>
  </formats>
  <files>
    <file>
      <source>${basedir}/bin/clownshoes</source>
      <outputDirectory>/bin</outputDirectory>
      <fileMode>0755</fileMode>
    </file>
  </files>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib/</outputDirectory>
      <includes>
        <include>org.projectodd.stilts:*</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/lib/ext/</outputDirectory>
      <excludes>
        <exclude>org.projectodd.stilts:*</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
</assembly>
